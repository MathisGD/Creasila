<!DOCTYPE html>

<html>
    <head>

        <meta charset="UTF-8">
        <title>Page de connexion</title>
        <link rel="stylesheet" href="/css">

    </head>
    <body>
        <div class="center">
            <h1>Connexion</h1>
            <div class="txt_field">
                <% if(error!='') { %>
                    <div class="txt_field">
                        <%= error %>
                    </div>
                <% } %>
                <% if(success_msg!='') { %>
                    <div class="txt_field">
                        <%= success_msg %>
                    </div>
                <% } %>
                <% if(error_msg!='') { %>
                    <div class="txt_field">
                        <%= error_msg %>
                    </div>
                <% } %>
            </div>
            <div class="info">
                <p>Entrez l'adresse email associée à votre compte</p>
            </div>
            <form method="post" action="api/user/login">
                <div class="txt_field">
                    <input name="mail" type="text" required>
                    <label>Email</label>
                </div>
                <div class="txt_field">
                    <input name="mdp" type="password" required>
                    <label>Mot de passe</label>
                </div>
                <input type="submit" value="Connexion">
            </form>
            <div class="signup_link">
                Pas encore inscrit ? <a href="/register">S'inscrire ici</a>
            </div>
        </div>
    </body>
</html>
